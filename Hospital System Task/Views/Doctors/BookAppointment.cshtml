    @using Hospital_System_Task.Models
    @model IEnumerable<Doctor>

    <div class="container">
        <h2 class="page-title">Book Appointment</h2>

        <div class="doctor-grid">
            @foreach (var doctor in Model)
            {
                <div class="doctor-card">
                    <img src="~/images/@doctor.img" alt="@doctor.Name" class="doctor-img" />
                    <div class="doctor-info">
                        <h3 class="doctor-name">@doctor.Name</h3>
                        <p class="specialization">@doctor.Specialization</p>
                        <a asp-controller="Doctors" asp-action="CompleteAppointment" asp-route-Id="@doctor.Id" class="btn-book">
                            Book Appointment
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
